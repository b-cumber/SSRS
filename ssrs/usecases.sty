%-------------------------------------------------------------------------------
%                Required Packages
%-------------------------------------------------------------------------------
\usepackage{booktabs}
\usepackage{multirow}
\usepackage{tabularx}

%-------------------------------------------------------------------------------
%                Vertical Rule spacing
%-------------------------------------------------------------------------------
\setlength{\aboverulesep}{0pt}
\setlength{\belowrulesep}{0pt}
\setlength{\extrarowheight}{.75ex}
\newcolumntype{Z}{>{\raggedright\arraybackslash}X}

%-------------------------------------------------------------------------------
%                \addtitle command: add the title of the use case
%-------------------------------------------------------------------------------
\newcommand\addtitle[2]{\toprule[2.0pt] \textbf{#1} & \textbf{#2}}

%-------------------------------------------------------------------------------
%                \addfield command: add a property of the use case
%-------------------------------------------------------------------------------
\newcommand\addfield[2]{\\ \midrule\textit{#1} & #2 }

%-------------------------------------------------------------------------------
%                \addscenario command: add the main (or alternative) scenario
%                of the use case
%-------------------------------------------------------------------------------
\newcommand\addscenario[2]{\\ \midrule\textit{#1} & \begin{enumerate} #2 \end{enumerate}}

%-------------------------------------------------------------------------------
%                \additemizedfield command: add a field with an item list
%-------------------------------------------------------------------------------
\newcommand\additemizedfield[2]{\\ \midrule\textit{#1} & \begin{itemize} #2 \end{itemize}}

%-------------------------------------------------------------------------------
%                \finalizeusecase command: add the bottom bar to the use case
%-------------------------------------------------------------------------------
\newcommand\finalize{\\ \bottomrule[2.0pt]}


%-------------------------------------------------------------------------------
%                Define ``usecase'' environment
%-------------------------------------------------------------------------------
\newenvironment{usecase}
				%{\tabularx{\linewidth}{|p{.2\linewidth} p{.8\linewidth}|}}
				{\tabularx{\linewidth}{|p{.2\linewidth}|Z|}}
				{\endtabularx}
